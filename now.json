{
    "builds": [
        {
            "src": "subconverter/subconverter.exe",
            "use": "now-static-bin",
            "config": {
                    "port": 25500,
                    "timeout": 200,
                    "includeFiles": [
                        "subconverter/**"
               ]
            }
        },
        {
            "src": "index.html",
            "use": "@now/static"
        }
    ],
    "routes": [
        {
            "src": "/", 
            "dest": "index.html"
        },
        {
            "src": "/(.*)", 
            "dest": "subconverter/subconverter.exe"
        }
    ]
}